<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.guildsa.relativelayout.MainActivity">

    <TextView
        android:id="@+id/textView01"
        android:text="RED"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:padding="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView02"
        android:text="ORANGE"
        android:layout_height="wrap_content"
        android:background="#ffa500"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:padding="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView03"
        android:text="YELLOW"
        android:layout_height="wrap_content"
        android:background="#ffff00"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:padding="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textView04"
        android:text="GREEN"
        android:layout_height="wrap_content"
        android:background="#0f0"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:padding="25dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView05"
        app:layout_constraintRight_toLeftOf="@+id/textView05"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/textView05"
        android:text="BLUE"
        android:layout_height="wrap_content"
        android:background="#00f"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:padding="25dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textView07"/>

    <TextView
        android:id="@+id/textView06"
        android:text="INDIGO"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:background="#4b0082"
        android:padding="25dp"
        app:layout_constraintLeft_toRightOf="@+id/textView05"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView05"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textView07"
        android:text="VIOLET"
        android:layout_height="wrap_content"
        android:background="#ee82ee"
        android:textColor="#000"
        android:layout_width="0dp"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>
